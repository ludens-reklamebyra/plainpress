{
  "name": "plainpress",
  "version": "2.0.0",
  "description": "A plain Wordpress theme with gulp, scss, and browserify.",
  "main": "index.js",
  "scripts": {
    "postinstall": "bower install",
    "build": "gulp compile --production && npm run fontAwesome",
    "test": "mocha resources/js/tests/*.js --compilers js:babel-core/register",
    "fontAwesome": "gulp copyfonts",
    "start": "gulp",
    "dev": "gulp",
    "lint": "eslint ./resources/js",
    "lint:watch": "esw --watch --color ./resources/js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "resources/js/**/*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludens-reklamebyra/plainpress.git"
  },
  "keywords": [
    "wordpress",
    "gulp",
    "scss",
    "browserify",
    "bower"
  ],
  "authors": [
    "Stian Bakkane <stianba@gmail.com>",
    "Ã˜yvind Hermansen <oyvind@ludensreklame.no>",
    "Kristian Normand <kristian@ludensreklame.no>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ludens-reklamebyra/plainpress/issues"
  },
  "homepage": "https://github.com/ludens-reklamebyra/plainpress#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-react": "^6.10.3",
    "eslint-watch": "^3.1.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-if": "^2.0.2",
    "gulp-livereload": "^3.8.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-uglify": "^2.1.2",
    "gulp-util": "^3.0.8",
    "husky": "^0.13.3",
    "lint-staged": "^3.4.0",
    "mocha": "^3.3.0",
    "prettier": "^1.2.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0",
    "yargs": "^7.1.0"
  },
  "dependencies": {
    "jquery": "^3.2.1"
  }
}
